<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.havrylyuk.rgbcolorsdb">

    <application
        android:name="com.havrylyuk.rgbcolorsdb.RGBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity
            android:name="com.havrylyuk.rgbcolorsdb.activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.havrylyuk.rgbcolorsdb.activity.MainActivity">

        </activity>
        <activity
            android:name="com.havrylyuk.rgbcolorsdb.activity.SettingsActivity"
            android:label="@string/action_settings" />
        <!-- Service -->
        <service
            android:name="com.havrylyuk.rgbcolorsdb.service.ColorsGenIntentService"
            android:exported="false">
        </service>
        <!-- Provider -->
        <provider
            android:name="com.havrylyuk.rgbcolorsdb.data.RGBProvider"
            android:authorities="com.havrylyuk.rgbcolorsdb"
            android:enabled="true"
            android:exported="false">
        </provider>
    </application>

</manifest>